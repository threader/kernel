--- drivers/usb/dwc3/core.c
+++ drivers/usb/dwc3/core.c
@@ -623,8 +617,15 @@ static int dwc3_remove(struct platform_device *pdev)
 
 	dwc3_event_buffers_cleanup(dwc);
 	dwc3_free_event_buffers(dwc);
+
+	usb_phy_set_suspend(dwc->usb2_phy, 1);
